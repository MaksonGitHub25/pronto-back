// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                  Int                  @unique
    firstName           String
    lastName            String
    fullName            String
    createdAt           DateTime             @default(now())
    email               String
    password            String
    Session             Session?
    Profile             Profile?
    VerificationRequest VerificationRequest?

    @@id([id, fullName])
}

model Session {
    user      User?    @relation(fields: [userId], references: [id])
    sessionId String   @id @unique
    userId    Int      @unique @default(autoincrement())
    expiresAt DateTime
}

model Profile {
    User                    User      @relation(fields: [profileId, name], references: [id, fullName])
    profileId               Int       @id
    name                    String
    age                     Int?
    dateOfBirth             DateTime?
    description             String?
    createdAt               DateTime  @default(now())
    city                    String?
    isVerifed               Boolean   @default(false)
    sentVerificationRequest Boolean   @default(false)
    icon                    String?

    @@unique([profileId, name])
}

model VerificationRequest {
    User        User     @relation(fields: [userId], references: [id])
    userId      Int      @id @unique
    requestedAt DateTime @default(now())
}
