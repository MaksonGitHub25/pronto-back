generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Users {
    id                   Int                   @unique
    firstName            String
    lastName             String
    fullName             String
    createdAt            DateTime              @default(now())
    email                String                @unique
    password             String
    Sessions             Sessions?
    Profiles             Profiles?
    VerificationRequests VerificationRequests?
    Posts                Posts[]

    @@id([id, fullName])
}

model Sessions {
    users     Users?   @relation(fields: [userId], references: [id])
    sessionId String   @id @unique
    userId    Int      @unique @default(autoincrement())
    expiresAt DateTime
}

model Profiles {
    Users                   Users     @relation(fields: [profileId, name], references: [id, fullName])
    profileId               Int       @id
    name                    String
    age                     Int?
    dateOfBirth             DateTime?
    description             String?
    createdAt               DateTime  @default(now())
    city                    String?
    isVerifed               Boolean   @default(false)
    sentVerificationRequest Boolean   @default(false)
    icon                    String?

    @@unique([profileId, name])
}

model VerificationRequests {
    Users       Users    @relation(fields: [userId], references: [id])
    userId      Int      @id @unique
    requestedAt DateTime @default(now())
}

model Posts {
    Users     Users?   @relation(fields: [authorId], references: [id])
    authorId  Int
    createdAt DateTime @default(now())
    text      String
    picture   String?

    @@id([authorId, createdAt])
}
