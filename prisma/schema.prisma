// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id        Int      @id @unique
    firstName String
    lastName  String
    fullName  String
    createdAt DateTime @default(now())
    email     String
    password  String
}

model Session {
    id        String   @id
    sid       String   @unique
    data      String
    expiresAt DateTime
}
